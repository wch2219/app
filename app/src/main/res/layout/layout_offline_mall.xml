<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xxc.shoppingmall.widget.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:Left_Res="@drawable/icon_fanhui"
        app:Titile_Txt="@string/offline_mall_title"
        app:Title_Color="@color/black_000" />

    <ImageView
        android:id="@+id/offline_mall_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/img_ditu"
        android:visibility="gone" />

    <com.amap.api.maps.MapView
        android:id="@+id/offline_mall_location_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>