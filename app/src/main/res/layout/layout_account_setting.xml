<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f4f4f4"
    android:orientation="vertical">

    <com.xxc.shoppingmall.widget.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_fff"
        app:Divider_Visiable="false"
        app:Left_Res="@drawable/icon_fanhui"
        app:Titile_Txt="@string/account_setting_title"
        app:Title_Color="@color/black_000" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/setting_person_info"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/normal_2dp"
                android:background="@color/white_fff">

                <ImageView
                    android:id="@+id/setting_header"
                    android:layout_width="@dimen/normal_60dp"
                    android:layout_height="@dimen/normal_60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/normal_h_16dp"
                    android:src="@drawable/img_morentouxiang" />

                <LinearLayout
                    android:id="@+id/setting_text_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/normal_h_16dp"
                    android:layout_toRightOf="@+id/setting_header"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/setting_nick"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <TextView
                        android:id="@+id/setting_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/normal_6dp"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/normal_h_16dp"
                    android:src="@drawable/icon_gengduo" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_0.5dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/normal_6dp"
                android:background="@color/white_fff"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_dddddd" />

                <RelativeLayout
                    android:id="@+id/setting_infos_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="@string/setting_infos_hint"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:id="@+id/person_birthday_jiantou"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_auth_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="@string/setting_auth_name_hint"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_places_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="@string/setting_places_hint"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_bank_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="@string/setting_bank_hint"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_safe_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="@string/setting_safe_account_hint"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <!--0000000000000000000000-->
                <RelativeLayout
                    android:id="@+id/setting_pay_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="充值记录"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_cash_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="提现记录"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/setting_shield_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="卖盾记录"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>


                <!--0000000000000000000000-->


                <RelativeLayout
                    android:id="@+id/setting_set_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/normal_50dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/normal_h_16dp"
                        android:text="@string/setting_set_hint"
                        android:textColor="@color/black_000"
                        android:textSize="@dimen/normal_txt_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/normal_h_16dp"
                        android:src="@drawable/icon_gengduo" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/normal_0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_dddddd" />
                </RelativeLayout>
            </LinearLayout>

            <Button
                android:id="@+id/setting_exit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/normal_40dp"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/normal_h_16dp"
                android:layout_marginRight="@dimen/normal_h_16dp"
                android:layout_marginTop="@dimen/normal_40dp"
                android:background="@drawable/login_btn_bg"
                android:gravity="center"
                android:onClick="exitApp"
                android:text="@string/setting_exit_hint"
                android:textColor="@color/white_fff"
                android:textSize="@dimen/normal_txt_18sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>