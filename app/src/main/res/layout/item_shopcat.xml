<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/cb_check"
        android:clickable="false"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/selete_shopcat_check"
        android:button="@null"
        android:layout_margin="@dimen/dp_10"
        />
        <ImageView
            android:layout_width="@dimen/normal_60dp"
            android:layout_height="@dimen/normal_60dp"
            android:id="@+id/iv_pic"
            android:scaleType="fitXY"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                    android:textColor="@color/black"
                android:id="@+id/tv_name"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/red"
                    android:id="@+id/tv_price"
                    />
                <LinearLayout
                    android:layout_width="100dp"

                    android:layout_height="@dimen/normal_30dp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@drawable/shape_desc_numbg"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_jian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="â€”" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_cc" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/normal_1dp"
                        android:layout_weight="1.5"
                        android:background="#F3F3f3"
                        android:gravity="center"
                        android:text="1" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/gray_cc" />

                    <Button
                        android:id="@+id/btn_jia"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:text="+" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
</LinearLayout>