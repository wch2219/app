<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bg"
    android:orientation="vertical">

    <com.xxc.shoppingmall.widget.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        app:Titile_Txt="@string/login"
        app:Title_Color="@color/white_fff" />

    <ImageView
        android:layout_width="@dimen/normal_96dp"
        android:layout_height="@dimen/normal_96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_54dp"
        android:src="@drawable/img_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_16dp"
        android:text="泓德百年 济世致远"
        android:textColor="@color/white_fff"
        android:textSize="@dimen/normal_txt_18sp" />

    <EditText
        android:id="@+id/login_username"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/normal_64dp"
        android:hint="@string/login"
        android:inputType="number"
        android:textColorHint="@color/white_fff"
        android:theme="@style/edittext_gray_black_normal" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:hint="@string/login_hint_pwd"
        android:inputType="textPassword"
        android:textColorHint="@color/white_fff"
        android:theme="@style/edittext_gray_black_normal" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_40dp">

        <Button
            android:id="@+id/login_btn"
            android:layout_width="320dp"
            android:layout_height="@dimen/normal_40dp"
            android:layout_centerInParent="true"
            android:background="@drawable/login_btn_bg"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white_fff" />

        <TextView
            android:id="@+id/login_regist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/login_btn"
            android:layout_alignStart="@+id/login_btn"
            android:layout_marginTop="@dimen/normal_30dp"
            android:layout_below="@+id/login_btn"
            android:text="立即注册"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/normal_txt_14sp" />

        <TextView
            android:id="@+id/login_reset_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/login_btn"
            android:layout_marginTop="@dimen/normal_30dp"
            android:layout_below="@+id/login_btn"
            android:text="忘记密码?"
            android:textColor="@color/white_fff"
            android:textSize="@dimen/normal_txt_14sp" />

    </RelativeLayout>


</LinearLayout>