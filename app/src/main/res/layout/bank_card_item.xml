<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_v_16dp">

        <TextView
            android:id="@+id/bank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/normal_h_16dp"
            android:text="中国银行"
            android:textColor="@color/black_000"
            android:textSize="@dimen/normal_txt_14sp" />

        <TextView
            android:id="@+id/bank_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:maxLines="1"
            android:layout_marginRight="@dimen/normal_h_16dp"
            android:text="6222 5744 9087 6765 911"
            android:textColor="@color/black_000"
            android:textSize="@dimen/normal_txt_14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_1dp"
        android:layout_marginTop="@dimen/normal_v_16dp"
        android:background="@color/color_dddddd" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/normal_h_16dp"
        android:layout_marginRight="@dimen/normal_h_16dp">

        <LinearLayout
            android:id="@+id/bank_default_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="@dimen/normal_12dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bank_default_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address_default_selector" />

            <TextView
                android:id="@+id/bank_default_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_10dp"
                android:text="@string/address_cb_default"
                android:textColor="@color/black_000"
                android:textSize="@dimen/normal_txt_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bank_delete_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/normal_12dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shanchu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_10dp"
                android:text="@string/address_delete_hint"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/normal_txt_12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bank_edit_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/normal_12dp"
            android:layout_marginRight="@dimen/normal_10dp"
            android:layout_toLeftOf="@+id/bank_delete_container"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bianji" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_10dp"
                android:text="@string/address_edit_hint"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/normal_txt_12sp" />

        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_0.5dp"
        android:layout_marginTop="@dimen/normal_12dp"
        android:background="@color/color_dddddd" />

</LinearLayout>