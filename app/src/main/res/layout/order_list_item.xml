<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_fff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/order_item_img"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="@dimen/normal_6dp"
        android:src="@drawable/img_morenshangpin"
        android:layout_marginLeft="@dimen/normal_h_16dp"
        android:layout_marginTop="@dimen/normal_10dp" />

    <TextView
        android:id="@+id/order_item_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_4dp"
        android:layout_alignTop="@+id/order_item_img"
        android:layout_marginLeft="@dimen/normal_h_16dp"
        android:layout_marginRight="@dimen/normal_h_16dp"
        android:layout_toLeftOf="@+id/order_item_price"
        android:layout_toRightOf="@+id/order_item_img"
        android:ellipsize="end"
        android:maxHeight="90dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_txt_14sp" />

    <TextView
        android:id="@+id/order_item_price"
        android:layout_marginTop="@dimen/normal_4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/order_item_img"
        android:layout_marginRight="@dimen/normal_h_16dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_txt_14sp" />

    <View
        android:id="@+id/order_item_divider1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/order_item_img"
        android:layout_marginLeft="@dimen/normal_h_16dp"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/order_item_goods_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_item_divider1"
        android:layout_marginBottom="@dimen/normal_10dp"
        android:layout_marginTop="@dimen/normal_10dp"
        android:gravity="right"
        android:paddingLeft="@dimen/normal_h_16dp"
        android:paddingRight="@dimen/normal_h_16dp"
        android:text="共一件商品 合计：¥2100.00"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/normal_txt_12sp" />

    <View
        android:id="@+id/order_item_divider2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_1dp"
        android:layout_below="@+id/order_item_goods_money"
        android:background="@color/color_dddddd" />

    <TextView
        android:id="@+id/order_item_confirm_goods"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/order_item_divider2"
        android:layout_marginBottom="@dimen/normal_10dp"
        android:layout_marginRight="@dimen/normal_h_16dp"
        android:layout_marginTop="@dimen/normal_10dp"
        android:background="@drawable/order_item_confirm_bg"
        android:paddingBottom="@dimen/normal_4dp"
        android:paddingLeft="@dimen/normal_12dp"
        android:paddingRight="@dimen/normal_12dp"
        android:paddingTop="@dimen/normal_4dp"
        android:text="@string/order_item_confirm"
        android:textColor="@color/color_ff4040" />
</RelativeLayout>