<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xxc.shoppingmall.widget.CommonTitle
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_fff"
        app:Left_Res="@drawable/icon_fanhui"
        app:Titile_Txt="@string/setting_title"
        app:Title_Color="@color/black_000" />

    <RelativeLayout
        android:background="@color/white_fff"
        android:id="@+id/setting_feedback"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_50dp"
        android:layout_marginTop="@dimen/normal_2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_h_16dp"
            android:text="@string/setting_feedback_hint"
            android:textColor="@color/black_000"
            android:textSize="@dimen/normal_txt_16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_h_16dp"
            android:src="@drawable/icon_gengduo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/normal_h_16dp"
            android:background="@color/color_dddddd" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about"
        android:layout_width="match_parent"
        android:background="@color/white_fff"
        android:layout_height="@dimen/normal_50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/normal_h_16dp"
            android:text="@string/setting_about_hint"
            android:textColor="@color/black_000"
            android:textSize="@dimen/normal_txt_16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/normal_h_16dp"
            android:src="@drawable/icon_gengduo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/color_dddddd" />
    </RelativeLayout>

</LinearLayout>