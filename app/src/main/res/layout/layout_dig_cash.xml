<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xxc.shoppingmall.widget.CommonTitle
        android:id="@+id/dig_cash_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:Left_Res="@drawable/icon_fanhui"
        app:Right_Color="@color/color_ff4040"
        app:Right_Txt="@string/dig_cash_hint"
        app:Titile_Txt="@string/dig_cash_title_hint"
        app:Title_Color="@color/black_000" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dig_cash_money_type_hint"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_txt_16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dig_cash_num_hint"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_txt_16sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dig_cash_price_hint"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/normal_txt_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_4dp"
        android:background="@color/color_dddddd"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dig_cash_all_money_hint"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_txt_16sp" />

        <TextView
            android:id="@+id/dig_cash_total_num"
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_txt_16sp" />

        <TextView
            android:id="@+id/dig_cash_unit"
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/dig_cash_unit_hint"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_txt_16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normal_4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="可提出"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_txt_16sp" />

        <TextView
            android:id="@+id/dig_cash_bonus"
            android:layout_width="0dp"
            android:layout_height="@dimen/normal_32dp"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/normal_txt_16sp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/normal_32dp"
                android:drawablePadding="@dimen/normal_6dp"
                android:drawableRight="@drawable/icon_up"
                android:gravity="center"
                android:text="@string/dig_cash_unit_hint"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/normal_txt_16sp" />
        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_0.5dp"
        android:background="@color/color_999999" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        >
    <RadioGroup
        android:id="@+id/rg_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_check_rb"
        android:orientation="horizontal"
        android:layout_margin="@dimen/dp_20"
        >

        <RadioButton
            android:id="@+id/rb_usableIntege"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="可用积分兑换"
            android:checked="true"
            android:background="@drawable/selete_money_rb_check"
            android:gravity="center"
            android:textColor="@drawable/selete_rb_text_color"
            android:button="@null" />

        <RadioButton
            android:id="@+id/rb_totalIntege"
            android:layout_width="0dp"
            android:text="总积分兑换"
            android:gravity="center"
            android:background="@drawable/selete_money_rb_check"
            android:textColor="@drawable/selete_rb_text_color"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:button="@null" />

    </RadioGroup>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="积分数量："
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/normal_txt_16sp"
                />
                <EditText
                    android:id="@+id/et_num"
                    android:layout_width="100dp"
                    android:padding="3dp"
                    android:lines="1"
                    android:hint="积分数量"
                    android:textSize="13sp"
                    android:layout_height="30dp"
                    android:inputType="number"
                    android:maxEms="10"
                    android:background="@drawable/shape_desc_numbg"
                    />
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="GSC实时价格："
                    android:textSize="@dimen/textSize_16"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/tv_price"
                    />

            </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="可兑换的数量："
            android:textSize="@dimen/textSize_16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_userconvernum"
            />
        <ImageView
            android:id="@+id/iv_gsc"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/icon_gsc"
            android:layout_marginLeft="@dimen/normal_5dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="商标股："

            android:textSize="@dimen/textSize_16"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_gravity="center_vertical"
            android:id="@+id/tv_stocknum"
            />
    </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/normal_50dp"
            android:layout_marginRight="@dimen/normal_50dp"
            android:layout_marginTop="@dimen/normal_30dp"
            android:background="@drawable/shape_paysucc_btn"
            android:text="提交兑换"
            android:id="@+id/btn_submit"
            android:textColor="@color/white"
            />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/conver"
                />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>