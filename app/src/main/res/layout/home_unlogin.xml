<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_unlogin"

    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
                android:layout_marginTop="@dimen/normal_10dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_centerInParent="true"
            >
        <ImageView
            android:id="@+id/home_unlogin_image_header"
            android:layout_width="@dimen/normal_48dp"
            android:layout_height="@dimen/normal_48dp"
            android:src="@drawable/img_morentouxiang" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未登录"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center_horizontal"
                    android:textSize="13sp"
                    />
        </LinearLayout>
</RelativeLayout>