<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/normal_6dp"
        android:layout_marginBottom="@dimen/normal_6dp"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_toLeftOf="@+id/histroy_item_time"
        android:orientation="vertical">

        <TextView
            android:id="@+id/histroy_item_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/normal_txt_12sp" />

        <TextView
            android:id="@+id/histroy_item_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_4dp"
            android:text="+900"
            android:textColor="@color/color_ff4040"
            android:textSize="@dimen/normal_txt_16sp" />
    </LinearLayout>


    <TextView
        android:id="@+id/histroy_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/normal_10dp"
        android:text="2018-02-01"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/normal_txt_16sp" />

</RelativeLayout>